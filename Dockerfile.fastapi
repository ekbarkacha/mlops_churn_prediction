# Shared base image
FROM ml-base:latest 

# Create non-root user
RUN useradd -m appuser

# Set working directory
WORKDIR /app

# Copy the rest of the app
#COPY app/ .

# Switch to non-root
USER appuser

# Expose API port
EXPOSE 8000

# Start FastAPI
CMD ["uvicorn", "src.app.main:app", "--host", "0.0.0.0", "--port", "8000"]